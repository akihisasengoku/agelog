var time = 1000;
<% if params[:type] == "Age" %>
  var age = function age() {
    $('#speedTest').find(".age-<%= @shop.id %>").replaceWith("<%= escape_javascript(render('shops/unage' , shop: @shop)) %>");
    var ageCount = $('#ageCount');
    ageCount.html(parseInt(ageCount.text())+1);
  }
  setTimeout(age, time);
  
<% else %>
  var want = function want() {
    $('#speedTest').find(".want-<%= @shop.id %>").replaceWith("<%= escape_javascript(render('shops/unwant' , shop: @shop)) %>");
    var wantCount = $('#wantCount');
    wantCount.html(parseInt(wantCount.text())+1);
  }
  setTimeout(want, time);
<% end %>

function clearDisabled() {
  $('.btn-age').removeAttr('disabled').text();
  $('.btn-want').removeAttr('disabled').text();
}