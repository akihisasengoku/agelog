<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @shop.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @shop.address %>
</p>
<% if logged_in? %>
  <%= render 'shared/micropost_form' %>
<% end %>

<% if @microposts.any? %>
  <div class="microposts">
    <% @microposts.each do |m| %>
      <div class="micropost">
        <h2><%= link_to m.user.name, user_path(m.user.id) %></h2>
        <p><%= m.content %></p>
      </div>
    <% end %>
  </div>
  
  <div class="users">
    <h2>All Users</h2>
    <ul>
      <% @users.each do |u| %>
        <li><%= link_to u.name, user_path(u.id) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= link_to 'Edit', edit_shop_path(@shop) %> |
<%= link_to 'Back', shops_path %>
